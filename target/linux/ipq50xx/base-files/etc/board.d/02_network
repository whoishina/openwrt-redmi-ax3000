#!/bin/sh

. /lib/functions.sh
. /lib/functions/uci-defaults.sh
. /lib/functions/system.sh

ipq50xx_setup_interfaces()
{
	local board="$1"
	case $board in
		redmi,ax3000)
			ucidef_add_switch "switch1" \
				"6@eth1" \
				"1:lan:1" "2:lan:2" "3:lan:3" \
				"4:wan"
			;;
	esac
}

board_config_update
board=$(board_name)
ipq50xx_setup_interfaces $board
board_config_flush

exit 0
